<%- include('header', {pagetitle: "Guests"}) -%>

<div class="row" style="padding-top: 20px;">
    <pre style="color: white">
        This is where you can find the registered guests.
    </pre>

</div>

<div class="row">
    <div class = "col-sm">
        <table class = "table-dark table-hover" cellpadding="10" border="3" style="border-color: #28cf75">

            <thead>
            <tr style="background-color: #ffffff; color: #28cf75;">
                <td>
                    <h5>Name</h5>
                </td>
                <td>
                    <h5>Category</h5>
                </td>
                <td>

                </td>

            </tr>
            </thead>



            <% for(key in guest_array) { var one_guest = guest_array[key]; %>


            <tr style="background-color: #ffffff; color:#000000;">
                <td>
                    <%= one_guest.name %>
                </td>
                <td>
                    <%= one_guest.category%>
                </td>
                <td>
                    <a href="/guests/mod/<%= one_guest.id %>" ><i class="fas fa-user-edit" style="color: #28cf75" ></i>
                        <a href="/guests/del/<%= one_guest.id %>"><i class="fas fa-user-times" style="color: #28cf75"></i>
                </td>

            </tr>
            <%}%>

        </table>

    </div>
    <div class = "col-sm">
        <a href="guests/add"><button type="button" class="btn btn-primary btn-lg" style="background-color: #ff2281; border-color: #ff2281; color: #ffffff">New guest</button>

    </div>


</div>

</body>
</html>